@model IEnumerable<AppCinema.Models.Producer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@{
    ViewData["Title"] = "List of Producers";
}

<div class="row">

    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var e in Model)
                {
                    <tr>

                        <td class="align-middle">
                            <img class="rounded-circle" src="@e.ProfilePictureURL" alt="@e.FullName" style="max-width: 150px" />
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelE => e.FullName)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelE => e.Bio)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Producers" asp-action="Edit" asp-route-id="@e.Id"><i class="bi bi-pencil-square"></i>Edit </a>  |
                            <a class="btn btn-outline-info" asp-controller="Producers" asp-action="Details" asp-route-id="@e.Id"><i class="bi bi-eye"></i>Details </a>  |
                            <a class="btn btn-danger text-white" asp-controller="Producers" asp-action="Delete" asp-route-id="@e.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>


<div style="position: fixed; right: 25px; bottom: 25px;  " class="text-white">
    <a asp-controller="Producers" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add new
    </a>
    
</div>