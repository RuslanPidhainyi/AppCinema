@model IEnumerable<AppCinema.Models.ApplicationUser> //для перечеслений елементов которые мы получим от моделUsers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@{
    ViewData["Title"] = "List of All users";
}

<div class="row">

    <div class="col-md-6 offset-3">

        <p>
            <h4>
                List of all users
            </h4>
        </p>

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
     
                        <!-- For display full name -->
                        <td class="align-middle">
                            @Html.DisplayFor(modelE => e.FullName)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelE => e.UserName)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelE => e.Email)
                        </td>

                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
